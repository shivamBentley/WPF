<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Slider IsSnapToTickEnabled="True" x:Name="MySlider" Minimum="0" Maximum="100" />
            <!--<TextBox Name="MyTxt" Width="50" Text="{Binding ElementName=MySlider, Path=Value, Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"  />-->
            <!--<TextBox Name="MyTxt" Width="50" Text="{Binding ElementName=MySlider, Path=Value, Mode=OneWay , UpdateSourceTrigger=PropertyChanged}"  />-->
            <!--<TextBox Name="MyTxt" Width="50" Text="{Binding ElementName=MySlider, Path=Value, Mode=OneWayToSource , UpdateSourceTrigger=PropertyChanged}"  />-->
            <TextBox Name="MyTxt" Width="50" Text="{Binding ElementName=MySlider, Path=Value, Mode=OneTime , UpdateSourceTrigger=PropertyChanged}"  />
        </StackPanel>
    </Grid>
</Window>
