<Window x:Class="InotfiyPropertyChanged_interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InotfiyPropertyChanged_interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="First Name" Canvas.Left="103" Canvas.Top="68" />
        <TextBox Width="250" x:Name="textName"  Height="20" Text="{Binding Path=FirstName}" Canvas.Left="209" Canvas.Top="68"/>
        <Label Content="Last Name" Canvas.Left="103" Canvas.Top="113" />
        <TextBox Width="250" Text="{Binding Path=LastName}" Height="20" Canvas.Left="209" Canvas.Top="113"/>
        <Label Content="Full Name" Canvas.Left="103" Canvas.Top="152" />
        <TextBox Width="250" Text="{Binding Path=FullName}" Height="20" Canvas.Left="209" Canvas.Top="152"/>
    </Canvas>
</Window>
